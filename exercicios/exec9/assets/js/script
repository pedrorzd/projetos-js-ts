function meuEscopo(){

    const form = document.querySelector('#form');
    const resultado = form.querySelector('#resultado');
    let resultadoIMC;

    function eventReciever(evento){

        evento.preventDefault();

        const peso = form.querySelector('#iweight');
        const altura = form.querySelector('#iheight');

        function calculadorIMC(peso, altura){
            let IMC;
            return IMC = peso / (altura **(2)) ;
        };

        let pesoNum = parseFloat(peso.value);
        let alturaNum = parseFloat(altura.value);
        
        let IMC = calculadorIMC(pesoNum, alturaNum); 
        const resultado = document.querySelector('#resultado');
        
        if(IMC<18.5){
            resultado.innerHTML = `Seu IMC é de + ${IMC.toFixed(2)}, você está abaixo do peso.`;
        } else if(IMC>=18.5 && IMC<=24.9){
            resultado.innerHTML = `Seu IMC é de ${IMC.toFixed(2)}, você com o peso normal.`;
        } else if (IMC>=25 && IMC<=29.9) {
            resultado.innerHTML = `Seu IMC é de ${IMC.toFixed(2)}, você com sobrepeso.`;
        } else if (IMC>=30 && IMC<=34.9) {
            resultado.innerHTML = `Seu IMC é de ${IMC.toFixed(2)}, você com obesidade grau 1.`;
        } else if (IMC>=35 && IMC<=39.9) {
            resultado.innerHTML = `Seu IMC é de ${IMC.toFixed(2)}, você com obesidade grau 2.`;
        } else if (IMC>=40) {
            resultado.innerHTML = `Seu IMC é de ${IMC.toFixed(2)}, você com obesidade grau 3.`;
        } else{
            resultado.innerHTML = `Algum dado inserido está incorreto, verifique e tente novamente.`;
        }
    };
    form.addEventListener('submit',eventReciever);
};
meuEscopo();